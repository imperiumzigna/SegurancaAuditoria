<!DOCTYPE html>
<html lang="pt">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>Chat - @ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar" style="background-color:black">
        <div class="content-wrapper">
            <div class="float-right">
                <p class="site-title">@Html.ActionLink("Chat", "Index", "Home")</p>
            </div>
           
        </div>
    </nav>

    <div id="body">
        <div class="content-wrapper">
            
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
            </div>
        </div>
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <div class="footer-copyright">
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Luiz Ricardo Ripardo, Igor Amorim Silva</p>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    @RenderSection("ChatJs", required: false)
</body>
</html>
